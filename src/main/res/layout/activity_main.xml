<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />


    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="match_parent"
                    android:layout_height="380px"
                    android:background="@mipmap/top1"/>

                <TextView
                    android:paddingTop="50px"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的活动专属二维码"/>


                <ImageView
                    android:id="@+id/iv_QRCode"
                    android:layout_width="500px"
                    android:layout_height="500px"
                    android:layout_gravity="center"
                    android:background="@drawable/ivlayout"
                    android:padding="12px"
                    android:layout_marginTop="50px"
                    android:src="@mipmap/delete" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:textSize="18dp"
                    android:textColor="#A3A3A3"
                    android:layout_gravity="center"
                    android:text="专属链接"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70px"
                    android:layout_marginRight="70px"
                    android:layout_marginTop="24px"
                    android:background="@drawable/linear"
                    >
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50px"
                        android:gravity="center_vertical"
                        android:textColor="#666"
                        android:text="https://www.baidu.com"/>

                    <View android:layout_height="match_parent"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:background="#e6e6e6"
                        android:layout_width="1dp"
                        android:layout_toLeftOf="@+id/tv_copy"/>



                    <TextView
                        android:id="@+id/tv_copy"
                        android:layout_width="200px"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textColor="#e53935"
                        android:textSize="20dp"
                        android:text="复制" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="70px"
                    android:layout_marginRight="70px"
                    android:layout_marginBottom="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px">

                    <TextView
                        android:id="@+id/tv_explaintitel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#222"
                        android:text="活动说明："/>
                    <TextView
                        android:id="@+id/tv_explain1"
                        android:layout_below="@+id/tv_explaintitel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#8f8f8f"
                        android:layout_marginTop="30px"
                        android:lineSpacingExtra="20px"
                        android:text="1.活动说明，有业务配置。活动说明，有业务配置。活动说明，有业务配置。活动说明，有业务配置。"/>
                    <TextView
                        android:id="@+id/tv_explain2"
                        android:layout_marginTop="15px"
                        android:layout_below="@+id/tv_explain1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#8f8f8f"
                        android:text="2.活动说明，有业务配置。活动说明，有业务配置。"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textColor="#e53935"
            android:background="@drawable/btn_progress_selector"
            android:text="推荐进度"/>
        <Button
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_share_selector"
            android:text="立即分享"/>
    </LinearLayout>

</LinearLayout>
