<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dialog_qRCode"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_share_qrcoed"
        android:layout_marginTop="15dp"
        android:textColor="#8f8f8f"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_share_qrcoed"/>

    <LinearLayout
        android:id="@+id/ll_share_item"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            app:srcCompat="@mipmap/weixin" />

        <ImageView
            android:id="@+id/iv_pengyouquan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            app:srcCompat="@mipmap/pengyouquan" />

        <ImageView
            android:id="@+id/ic_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            app:srcCompat="@mipmap/weibo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            app:srcCompat="@mipmap/qq" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="@string/tv_weixin"/>

        <TextView
            android:id="@+id/tv_pengyouquan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="@string/tv_pengyouquan"/>

        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="@string/tv_weibo"/>

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="@string/tv_qq"/>
    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"/>
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="#e53935"
        android:textSize="20sp"
        android:text="@string/tv_save" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="#666"
        android:textSize="20sp"
        android:text="@string/tv_cancel" />

</LinearLayout>
