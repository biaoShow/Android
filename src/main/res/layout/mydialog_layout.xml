<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_Dialog_QRCode"
        android:layout_marginTop="80px"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="60px"
        android:textColor="#8f8f8f"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="邀请好友扫一扫，分享给TA"/>

    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            app:srcCompat="@mipmap/weixin" />

        <ImageView
            android:id="@+id/iv_pengyouquan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            app:srcCompat="@mipmap/pengyouquan" />

        <ImageView
            android:id="@+id/ic_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            app:srcCompat="@mipmap/weibo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            app:srcCompat="@mipmap/qq" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="微信"/>

        <TextView
            android:id="@+id/tv_pengyouquan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="朋友圈"/>

        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="微博"/>

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#8f8f8f"
            android:text="QQ"/>
    </LinearLayout>
    <View
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="138px"
        android:gravity="center"
        android:textColor="#e53935"
        android:textSize="20sp"
        android:text="保存到相册" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="138px"
        android:gravity="center"
        android:textColor="#666"
        android:textSize="20sp"
        android:text="取消" />

</LinearLayout>
