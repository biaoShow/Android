<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_share_qrcode"
    android:background="@drawable/dialog_bg_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.biao.demo1.MyView
        android:id="@+id/mv_qrcode"
        android:layout_marginTop="10dp"
        android:layout_width="220dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        custom:imgWidth="200dp"
        custom:imgHeight="200dp"
        custom:text="邀请好友扫一扫，分享给TA"
        custom:textSize="18sp"
        custom:textColor="#8f8f8f"/>
    <com.example.biao.demo1.GraffitiView
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/ll_share_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mv_qrcode">

        <com.example.biao.demo1.MyView
            android:id="@+id/mv_share_weixin"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            custom:imgWidth="60dp"
            custom:imgHeight="60dp"
            custom:mysrc="@mipmap/weixin"
            custom:text="微信"
            custom:textSize="15sp"
            custom:textColor="#8f8f8f"/>
        <com.example.biao.demo1.MyView
            android:id="@+id/mv_share_pengyouquan"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            custom:imgWidth="60dp"
            custom:imgHeight="60dp"
            custom:mysrc="@mipmap/pengyouquan"
            custom:text="朋友圈"
            custom:textSize="15sp"
            custom:textColor="#8f8f8f"/>
        <com.example.biao.demo1.MyView
            android:id="@+id/mv_share_weibo"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            custom:imgWidth="60dp"
            custom:imgHeight="60dp"
            custom:mysrc="@mipmap/weibo"
            custom:text="微博"
            custom:textSize="15sp"
            custom:textColor="#8f8f8f"/>
        <com.example.biao.demo1.MyView
            android:id="@+id/mv_share_qq"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            custom:imgWidth="60dp"
            custom:imgHeight="60dp"
            custom:mysrc="@mipmap/qq"
            custom:text="QQ"
            custom:textSize="15sp"
            custom:textColor="#8f8f8f"/>
    </LinearLayout>

    <View
        android:id="@+id/view_wire1"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ll_share_link"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"/>
    <TextView
        android:id="@+id/tv_qrcode_save"
        android:layout_below="@+id/view_wire1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:text="@string/tv_dialog_saveqrcode"/>
    <View
        android:id="@+id/view_wire2"
        android:layout_below="@+id/tv_qrcode_save"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"/>
    <TextView
        android:id="@+id/tv_close_dialog"
        android:layout_below="@id/tv_qrcode_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#666"
        android:text="@string/tv_dialog_close"/>

</RelativeLayout>
